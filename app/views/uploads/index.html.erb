<%= searchbox %>
<h1>Dateien</h1>
<table id="uploads">
  <thead>
    <tr>
      <th></th>
      <th class="hide_on_phone">Typ</th>
      <th>Name</th>
      <th class="hide_on_phone">Hochgeladen um</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% uploads.each do |upload| %>
      <tr>
        <td><%= upload.unread_icon %></td>
        <td class="hide_on_phone"><i class="fi-page-filled file-type <%= upload.extension %>"></i></td>
        <td><%= link_to upload.file_file_name, upload %> (<%= link_to icon(:download), upload.file.url %>)</td>
        <td class="hide_on_phone"><%= datetime_column upload.created_at, relative: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @uploads %>
