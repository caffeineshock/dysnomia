# Ignore bundler config.
/.bundle

# Ignore the default SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
/log/*.log
/tmp

# Ignore compiled assets
/public/assets/*

# Ignore emojis
/public/images/*

# Ignore paperclip files
/public/system/*

# Ignore files containing secrets
/config/database.yml
/config/secrets.yml
/config/private_pub.yml
/config/redis.yml

# Ignore files containing server-specific bits
/config/deploy.rb

# Ignore class diagram
erd.pdf

# Ignore gemsurance report
gemsurance_report.html

# Ignore dump files from local redis
dump.rdb
config/settings.local.yml
config/settings/*.local.yml
config/environments/*.local.yml
